<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="120dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/dimen_loading_progress"
        android:layout_height="@dimen/dimen_loading_progress"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_foreground" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/loader_circle"
        android:layout_width="@dimen/dimen_loading_progress_bound"
        android:layout_height="@dimen/dimen_loading_progress_bound"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_loading" />

</RelativeLayout>