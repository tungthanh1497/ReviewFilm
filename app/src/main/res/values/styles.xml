<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="textViewRegular">
        <item name="android:textColor">@color/colorTextRegular</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="textViewMedium">
        <item name="android:textColor">@color/colorTextMedium</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="textViewBold">
        <item name="android:textColor">@color/colorTextBold</item>
        <item name="android:fontFamily">@font/lato_black</item>
    </style>

</resources>